<h1>Welcome to the Dashboard</h1>
<div id="posts-container">
    {{#if posts}}
    {{#each posts as |post| }}
    <div class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <p>Author: {{post.username}}</p>
        <form action="/dashboard/{{post.id}}" method="POST">
            <input type="text" name="title" placeholder="Enter a new title">
            <textarea name="content" placeholder="Enter new content"></textarea>
            <button type="submit">Update Post</button>
        </form>
        <form action="/dashboard/{{post.id}}?_method=DELETE" method="POST">
            <button type="submit">Delete Post</button>
        </form>
    </div>
    {{/each}}
    {{else}}
    <p>No posts found.</p>
    {{/if}}
</div>

{{!-- Create a new post --}}
<h2>Create a New Post</h2>
<form action="/dashboard" method="POST">
    <input type="text" name="title" placeholder="Enter a title">
    <textarea name="content" placeholder="Enter content"></textarea>
    <button type="submit">Create Post</button>
</form>